@CHARSET "ISO-8859-1";
.pageWiz .viewPort {
	width:398px;
	height: 300px;
	overflow: hidden;
	border: thin solid #DDD;
	background: #F4F4F4;
}
.pageWiz ul.horizSlider {
	display:block;
	height: 300px;
	width: 3000px;

}
.pageWiz .horizSlide {
	display: block;
	height: 300px;
	width:398px;
	margin-right: 20px;
	float:left;
	overflow: auto;
}
.pageWiz input[type="button"] { margin-top: 20px;}
.pageWiz input[value="Next step >>"] {float: right;}
.pageWiz input[value="<< Prev step"] {float: left;}
.pageWiz table td:nth-child(1) {width: 20px;}
.pageWiz input[type=radio] { margin:0;}
.pageWiz .wizDataReview {
	padding: 20px 40px;
	line-height: 25px;
}
.pageWiz .expBtn {
	width: 170px;
	margin: 0 auto 20px auto;
}
